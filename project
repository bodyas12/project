import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')


@bot.command()
async def hello(ctx):
    await ctx.send('Привет! Я твой Discord бот, я могу найти причины глобального потепления. напиши $start что бы я тебе показал список проблем, выбери номер и напиши его что бы я тебе показал одну из проблем')

@bot.command()
async def start(ctx):
    await ctx.send('было найдено 5 причин.')



@bot.command()
async def reason1(ctx):
    await ctx.send('причина первая: производство энергии.  Выработка электроэнергии и тепла путем сжигания ископаемых видов топлива, таких как уголь, нефть и природный газ, является причиной значительной части глобальных выбросов. Большая часть электроэнергии по-прежнему производится из ископаемых видов топлива; лишь около четверти приходится на ветер, солнце и другие возобновляемые источники.')

@bot.command()
async def reason2(ctx):
    await ctx.send('проблема вторая: вырубка лесов. Вырубка лесов под сельскохозяйственные угодья или пастбища или по другим причинам приводит к выбросам, так как вырубленные деревья выделяют накопленный ими углерод. Поскольку леса поглощают углекислый газ, их уничтожение также ограничивает способность природы удерживать выбросы от попадания в атмосферу.')

@bot.command()
async def reason3(ctx):
    await ctx.send('проблема третья: использование транспорта. Большинство легковых и грузовых автомобилей, судов и самолетов работают на ископаемом топливе. Именно поэтому транспорт считается одним из основных источников выбросов парниковых газов, особенно диоксида углерода. Хотя наибольшая часть выбросов приходится на автотранспорт, доля выбросов, приходящаяся на суда и самолеты, продолжает расти.')

@bot.command()
async def reason4(ctx):
    await ctx.send('проблема четвёртая: чрезмерное потребление.   Ваш дом и потребляемая вами энергия, то, как вы передвигаетесь, что вы едите и сколько выбрасываете — все это факторы, способствующие выбросам парниковых газов. К их числу также относится потребление таких товаров, как одежда, электронная аппаратура и изделия из пластмассы.')

@bot.command()
async def reason5(ctx):
    await ctx.send('пятая и последняя проблема: производство продовольствия.   Производство продуктов питания требует энергии, которая необходима для работы сельскохозяйственного оборудования или рыболовецких судов, как правило, на ископаемом топливе. Выращивание сельскохозяйственных культур также приводит к выбросам, например, при использовании удобрений и навоза. В результате жизнедеятельности крупного рогатого скота образуется метан, который является мощным парниковым газом. Кроме того, выбросы образуются в процессе упаковки и распределения продуктов питания.')
bot.run("TOKEN")
